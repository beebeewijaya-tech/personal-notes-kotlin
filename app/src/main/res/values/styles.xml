<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/fair_pink</item>
    <item name="colorPrimaryDark">@color/gallery</item>
    <item name="colorAccent">@color/gray</item>
  </style>

  <style name="Text" parent="TextAppearance.AppCompat.Small">
    <item name="android:textSize">@dimen/font_small</item>
    <item name="android:color">@color/gray</item>
    <item name="android:fontFamily">@font/noto_regular</item>
  </style>

  <style name="Text.Medium">
    <item name="android:textSize">@dimen/font_medium</item>
    <item name="android:fontFamily">@font/noto_bold</item>
  </style>

  <style name="Text.Small">
    <item name="android:textSize">@dimen/font_tiny</item>
    <item name="android:fontFamily">@font/noto_regular</item>
  </style>
</resources>
